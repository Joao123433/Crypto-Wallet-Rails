<div id="<%= dom_id mining_type %>">
  <form>
    <div class='form-group'>
      <%= label_tag nil, @mining_type.class.human_attribute_name(:description), style: "display: block" %>
      <%= text_field_tag nil, @mining_type.description, class: 'form-control', readonly: true %>
    </div>

    <div class='form-group'>
      <%= label_tag nil, @mining_type.class.human_attribute_name(:acronym), style: "display: block" %>
      <%= text_field_tag nil, @mining_type.acronym, class: 'form-control', readonly: true %>
    </div>
  </form>
</div>
