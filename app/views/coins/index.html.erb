<p style="color: green"><%= notice %></p>

<h1><%= Coin.model_name.human(count: @coins.size) %></h1>
  
<div id="coins">
  <table class='table table-hover'>
    <thead>
      <tr>
        <td><%= @coins.human_attribute_name(:description) %></td>
        <td><%= @coins.human_attribute_name(:acronyum) %></td>
        <td><%= @coins.human_attribute_name(:url_img) %></td>
      </tr>
    </thead>
    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronyum %></td>
          <td><%= image_tag coin.url_img, size: "30x30"%></td>
          <td><%= link_to t('links.show'), coin %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to t('new.coin'), new_coin_path, class: 'btn btn-primary' %>
<%= link_to t('links.back'), root_path, class: 'btn btn-primary' %>
