<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: 'form-control', placeholder: 'Bitcoin' %>
  </div>

    
  <div class='form-group'>
    <%= form.label :acronyum, style: "display: block" %>
    <%= form.text_field :acronyum, class: 'form-control', placeholder: 'BTC' %>
  </div>

  <div class='form-group'>
    <%= form.label :url_img, style: "display: block" %>
    <%= form.text_field :url_img, class: 'form-control', placeholder: 'http://img.url/bitcoin.png'  %>
    <%# <%= image_tag coin.url_img, size: "30x30" if coin.url_img %>
  </div>

  <div claass='form-group'>
    <%= form.label :mining_type_id, style: "display: block"%>
    <%= form.select("mining_type_id", @mining_type_options, {include_blank: "Selecione"}, class: 'form-control form-select') %>
  </div>

  <br>

  <div>
    <%= form.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
